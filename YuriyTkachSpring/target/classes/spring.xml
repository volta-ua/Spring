<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
		
	<bean id="client" class="com.yet.spring.core.beans.Client">
		<constructor-arg value="1"/>
		<constructor-arg value="John Smith"/>		
	</bean>
		
	<bean id="eventLogger" class="com.yet.spring.core.loggers.ConsoleEventLogger"/>	

	<bean id="fileEventLogger" class="com.yet.spring.core.loggers.FileEventLogger" init-method="init">
		<constructor-arg value="c://2.txt"/>
	</bean>
	
	<bean id="casheFileEventLogger" class="com.yet.spring.core.loggers.CacheFileEventLogger" destroy-method="destroy">
		<constructor-arg value="c://2.txt"/>
		<constructor-arg value="3"/>
	</bean>	

	<bean id="app" class="com.yet.spring.core.App">
		<constructor-arg ref="client"/>
		<constructor-arg ref="casheFileEventLogger"/>
	</bean>
	
	<bean id="event" class="com.yet.spring.core.Event" scope="prototype">
		<constructor-arg>			
			<bean class="java.util.Date"/>			
		</constructor-arg>
		<constructor-arg ref="dateFormat"/>	
	</bean>
	
	<bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
	
</beans>